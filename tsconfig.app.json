{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // ‚≠ê THIS FIXES YOUR ERROR
    "noEmit": true
  },
  "include": ["src", "api"],
  "exclude": ["src/mosaic", "src/mosaic/**/*"]
}